<!DOCTYPE html>
<html>
<head>
    <title>Employee List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="container mt-4">
    <a href="/employees/create" class="btn btn-success mb-3">Create Employee</a>
    <h1>Employee List</h1>

    <% if(employees.length > 0) { %>
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Employee Name</th>
                <th>Position</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i = 0; i < employees.length; i++) { %>
                <tr>
                    <td><a href="/employees/show/<%= employees[i]._id%>"><%= employees[i].name%></a></td>
                    <td><%= employees[i].position%></td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <% } else { %>
        <div class="alert alert-warning">No employees found.</div>
    <% } %>
</body>
</html>
